source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '10.0'
use_frameworks!

target ‘ARGallery’ do
    # Architecture
    pod 'ReactorKit'
    
    # API
    pod 'KenticoCloud'
    
    # Rx
    pod 'RxCocoa', '~> 4.0'
    pod 'RxDataSources', '~> 3.0'
    pod 'RxGesture'
    
    # UI
    pod 'NVActivityIndicatorView'
    pod 'AlamofireImage', '~> 3.3'
    pod 'Hero'
    pod 'TTRangeSlider'
    pod 'BEMCheckBox'
    pod 'Floaty', '~> 3.0.0'
    
    # Persistence
    pod 'RealmSwift'
    pod 'RxRealm'
end

target ‘ARGalleryTests’ do
    pod 'RxTest'
    
    # Architecture
    pod 'ReactorKit'
    
    # API
